{
  "name": "qiao-nodejs",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "prepare": "husky install",
    "build": "lerna run build",
    "test": "lerna run test",
    "prettier": "qpro prettier",
    "eslint": "qpro eslint",
    "lint": "npm run build && npm run test && npm run prettier && npm run eslint",
    "postinstall": "npm run lint",
    "cz": "qpro commitizen",
    "pb": "lerna publish",
    "graph": "nx graph",
    "check": "ncu && lerna exec ncu --concurrency=1 --ignore=qiao-cli --ignore=qiao-npms",
    "update": "ncu -u && lerna exec 'ncu -u' --concurrency=1 --ignore=qiao-cli --ignore=qiao-npms",
    "pkg": "qpro pkg ./packages",
    "dpkg": "qpro pkg ./packages dev"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.7.2",
    "@commitlint/config-conventional": "^17.7.0",
    "ava": "^5.3.1",
    "husky": "^8.0.3",
    "lerna": "^7.3.0",
    "lint-staged": "^14.0.1",
    "nx": "^16.10.0",
    "qiao-project": "^4.1.1"
  }
}
